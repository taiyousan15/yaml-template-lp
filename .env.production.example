# ------------------
# Database
# ------------------
# Vercel Postgres, Supabase, Neon などのPostgreSQLサービスのURL
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require

# ------------------
# AWS S3
# ------------------
# 画像・YAMLファイル保存用のS3バケット
S3_REGION=us-east-1
S3_BUCKET=yaml-template-lp-prod
S3_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
S3_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY

# ------------------
# Stripe
# ------------------
# 本番環境のStripeキー（sk_live_xxx）を使用
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxx
STRIPE_PRICE_PRO=price_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# ------------------
# Manus OAuth
# ------------------
# 本番環境のManus認証設定
MANUS_CLIENT_ID=your_manus_client_id
MANUS_CLIENT_SECRET=your_manus_client_secret
MANUS_REDIRECT_URI=https://your-domain.vercel.app/api/auth/callback

# ------------------
# Vercel
# ------------------
# Vercelデプロイフック（オプション）
VERCEL_DEPLOY_HOOK_URL=https://api.vercel.com/v1/integrations/deploy/xxxxx
VERCEL_TOKEN=your_vercel_token

# ------------------
# OCR Provider
# ------------------
# 'tesseract' または 'textract' を選択
OCR_PROVIDER=textract

# ------------------
# AWS (Textract用 - OCR_PROVIDER=textractの場合)
